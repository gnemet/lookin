{
  "title": "Users (Historical)",
  "description": "User directory from LDAP/Active Directory. Includes hierarchy (manager).",
  "schema": "dwh",
  "table_type": "Dimension Table (SCD2)",
  "columns": {
    "user_sid": {
      "type": "bigint",
      "desc": "Surrogate key"
    },
    "user_id": {
      "type": "bigint",
      "desc": "Internal user ID"
    },
    "user_key": {
      "type": "text",
      "desc": "Login username (e.g., nemetg)"
    },
    "user_name": {
      "type": "text",
      "desc": "Display name (e.g., G\u00e1bor N\u00e9met)"
    },
    "full_name": {
      "type": "text",
      "desc": "Full name (LastName FirstName)"
    },
    "email_address": {
      "type": "text",
      "desc": "Corporate email"
    },
    "department": {
      "type": "text",
      "desc": "Department (from LDAP)"
    },
    "manager": {
      "type": "text",
      "desc": "Manager user_key"
    },
    "active": {
      "type": "boolean",
      "desc": "Active employee flag"
    },
    "valid": {
      "type": "tstzrange",
      "desc": "SCD2 validity range"
    }
  }
}