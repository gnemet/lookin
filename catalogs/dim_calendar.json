{
  "title": "Calendar",
  "description": "Date dimension for time-based analysis. One row per calendar day.",
  "schema": "dwh",
  "table_type": "Dimension Table",
  "columns": {
    "day_id": {
      "type": "integer",
      "desc": "Primary key (YYYYMMDD format)"
    },
    "calendar_date": {
      "type": "date",
      "desc": "Calendar date"
    },
    "year": {
      "type": "integer",
      "desc": "Year"
    },
    "quarter": {
      "type": "integer",
      "desc": "Quarter (1-4)"
    },
    "month": {
      "type": "integer",
      "desc": "Month (1-12)"
    },
    "week": {
      "type": "integer",
      "desc": "ISO week number"
    },
    "day_of_week": {
      "type": "integer",
      "desc": "Day of week (1=Mon, 7=Sun)"
    },
    "is_workday": {
      "type": "boolean",
      "desc": "Business day flag"
    }
  }
}